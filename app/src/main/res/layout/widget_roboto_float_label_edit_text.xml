<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/FloatLabelEditTextHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/flet_hint_text_padding_horizontal"
        android:paddingRight="@dimen/flet_hint_text_padding_horizontal"
        android:textSize="@dimen/flet_hint_text_size" />

    <com.arunana.socialcharity.widgets.TypefaceEditText
        android:id="@+id/FloatLabelEditTextEditText"
        style="@style/RobotoEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/flet_hint_margin"
        app:customTypeface="Roboto-Medium.ttf" />

</merge>